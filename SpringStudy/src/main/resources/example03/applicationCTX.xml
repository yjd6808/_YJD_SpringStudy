<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student2" class="com.jdyun.example03_loading_xml_in_configuration_class.Student" >
		<constructor-arg value="홍길순"></constructor-arg>
		<constructor-arg value="30"></constructor-arg>
		<constructor-arg>
			<list>
				<value>마라톤</value>
				<value>요리</value>
			</list>
		</constructor-arg>
		
		<property name="height" value="190"></property>
		<property name="weight" value="70"></property>	
	</bean>
</beans>
